@page "/auth"

@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>Auth</PageTitle>

<h1>You are authenticated</h1>
<div class="panel">
    <AuthorizeView>
        <h2>Claims for @context.User.Identity?.Name!</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Claim type</th>
                    <th>Value</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var claim in context.User.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </AuthorizeView>
</div>
